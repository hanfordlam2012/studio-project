<%- include('includes/header') %>

<div id="fb-root"></div>
<script async defer crossorigin="anonymous" src="https://connect.facebook.net/en_GB/sdk.js#xfbml=1&version=v9.0" nonce="jKuJS7Hc"></script>
<!-- CONTACT FORM -->
<div id="contactForm" class="row justify-content-center mb-5">
  <div class="my-3 w-100 section">
    <div class="pt-4 mt-4 mb-0 mx-0"><h1 style="font-size: 4rem" class="text-center yellow-text bellota">MESSAGE ME</h1>
    </div>
  </div>
<div class="col-10"><% if (status == 'fail') { %>
        <div class="alert alert-danger text-center small py-2">Sorry, your message couldn't be sent...maybe try the Facebook Page below instead?</div>
      <% } else if (status == 'success') { %>
        <div class="alert alert-success text-center small py-2">Your message has been sent successfully. Thanks for reaching out!</div>
      <% } %>
    <form id="contact-form" class="my-4 px-3" action="/sendEmail" method="POST">
        <div id="contactEmailDiv" class="input-group mb-3">
          <div id="contactEmailPrepend" class="input-group-prepend">
            <span id="contactEmailText" class="input-group-text">Your email</span>
          </div>
          <input id="contactEmailInput" autocomplete="off" type="email" name="email" class="form-control" value="" placeholder=" abc@123.com">
        </div>
        <div id="contactMessageDiv" class="form-group">
          <textarea id="contactMessageInput" autocomplete="off" name="message" class="form-control" value="" placeholder="Schedule a free consultation, enquire about accompaniment, ask for educational advice, etc." rows="10"></textarea>
        </div>
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <button type="submit" id="contactFormSubmit" value="submit" class="btn btn-success btn-lg btn-block mt-3">Send</button>
      </form></div>
    
    </div>
<hr>
<!-- FACEBOOK -->
<div class="row justify-content-center pb-5 mb-5">
  <div class="section mt-3 w-100">
    <div class="py-4 mt-4 mx-0">
      <h1 style="font-size: 4rem" class="text-center yellow-text bellota">FACEBOOK</h1>
    </div>
  </div>
  <div class="justify-content-center">
    <div>
      <div class="fb-page justify-content-center mt-0" data-href="https://www.facebook.com/hanfordlampiano" data-tabs="timeline" data-width="500" data-height="500" data-small-header="false" data-adapt-container-width="false" data-hide-cover="false" data-show-facepile="false"><blockquote cite="https://www.facebook.com/hanfordlampiano" class="fb-xfbml-parse-ignore"><a href="https://www.facebook.com/hanfordlampiano">Hanford Lam</a></blockquote></div>
    </div>
  </div>
</div>
<hr>
<!-- GOOGLE MAPS -->
<div class="row justify-content-center mb-5">
  <div class="section my-3 w-100">
    <div class="pt-4 mt-4 mx-0">
      <h1 style="font-size: 4rem" class="text-center yellow-text bellota">LOCATION</h1>
      <h3 class="grey-text text-center handlee pb-2 pt-0 mt-4">Boronia, Melbourne, Australia</h3>
    </div>
  </div>
  <div class="mapouter d-flex justify-content-center">
    <div class="gmap_canvas">
        <iframe width="100%" height="auto" id="gmap_canvas" src="https://maps.google.com/maps?q=boronia&t=&z=13&ie=UTF8&iwloc=&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="auto">
        </iframe>
    </div>
    <style>.mapouter{margin:auto; position:relative;text-align:center;height:auto;width:100%;}.gmap_canvas {overflow:hidden;background:none!important;height:auto;width:100%;}iframe {width:100%;height:450px;border-radius:10px;}</style>
</div>
    </div>
    <script>
      document.getElementById("contactEmailInput").focus();
    </script>
<%- include('includes/footer') %>