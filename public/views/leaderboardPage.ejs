<!-- ERRORS -->
<% adErrors.forEach(function(message) { %>
  <div class="alert alert-danger text-center small py-1 mt-2"><%= message %></div>
<% }) %>

<div class="wallet-div bellota grey-text inline draggable">
  <strong style="color: <%= leaderboardColor %>"><%= username %></strong>'s wallet<br>
  <span class="pink-text"><strong><%= points %></strong></span> points<br>
  <span class="yellow-text"><%= lessonCount %></span>/<span class="orange-text"><%= paidLessons %></span> lessons<br>
  <a href="/practice" type="button" class="my-1 btn btn-info btn-sm">Practice</a>
  <a href="/parents" type="button" class="my-1 btn btn-warning btn-sm">Record</a><br>
  <a href="/missions" type="button" class="my-1 btn btn-danger btn-sm">Missions</a>
  <a href="/leaderboard" type="button" class="my-1 btn btn-success btn-sm">Prizes</a>
  <form id="logoutButton" class="mt-1 mb-2" action="/logout" method="POST">
    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
    <button type="submit" class="btn btn-secondary btn-sm">Log Out</button>
  </form>
</div>

<!-- PRIZES -->

<div id="prizeList" class="section">
  <div class="py-4 my-4 mb-4 mx-0"><h1 class="px-5 display-2 recursive rainbowText text-center">PRIZES</h1>
  </div>
</div>

<!-- TICKER -->
<div class="marquee">
	<div>
		<span>Get rewarded for your engagement!</span>
		<span>Work hard, learn lots, have fun.</span>
		<span>Spend your points wisely...</span>
	</div>
</div>

<table class="mt-0 pt-0 table text-center table-dark">
  <thead>
    <tr class="">
      <th class="grey-text" scope="col">PRIZE</th>
      <th class="grey-text" scope="col">PRICE</th>
    </tr>
  </thead>
  <tbody>
    <% prizeList.forEach((prize) => { %>
      <tr>
        <td><span style="color:<%= prize.color %>"><%= prize.title %></span><small class="text-muted ml-2"> <%= prize.desc %></small></td>
        <td class="green-text recursive"><%= prize.price %></td>
      </tr>
      <% }) %>
  </tbody>
</table>

<table class="mt-5 pt-0 table text-center table-dark">
  <thead>
    <tr class="">
      <th class="grey-text" scope="col">STUDENT</th>
      <th class="grey-text" scope="col">PIANO GRADE</th>
      <th class="grey-text" scope="col">POINTS</th>
    </tr>
  </thead>
  <tbody>
    <% leaderboard.forEach((student) => { console.log(student) %>
      <tr>
        <td><span style="color:<%= student.leaderboardColor %>"><%= student.username %></span></td>
        <td class="grey-text recursive"><%= student.grade %></td>
        <td class="pink-text recursive"><%= student.leaderboardScore %></td>
      </tr>
      <% }) %>
  </tbody>
</table>
  

