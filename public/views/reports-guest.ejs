    <!-- DYNAMIC NAVBAR AND TITLE -->
    <script>
      let currentPath = window.location.pathname
      if (currentPath == '/') {
        document.getElementById("homeTab").classList.add("orange-text")
        document.title = "Hanford Lam"
      } else if (currentPath == '/practice' || currentPath == '/missions' || currentPath == '/leaderboard' || currentPath == '/parents' || currentPath == '/reports') {
        document.getElementById("reportsTab").classList.add("orange-text")
        document.title = "Portal - Hanford Lam"
