<%- include('includes/header') %>
        <!-- LOGIN FORM -->
        <hr>
        <div class="jumbotron-transparent justify-content-center text-center p-3 my-4">
          <h1 class="text-center green-text mb-3 display-4 recursive">Log In</h1>
          <p class="text-center white-text h2 caveat">Keep track of your music learning journey!</p>
          <br>
          <% errors.forEach(function(message) { %>
            <div class="alert alert-danger text-center d-inline small mb-3 py-1"><%= message %></div>
          <% }) %>
          <div class="d-flex mt-3 justify-content-center">
            
            <form action="/login" method="POST">
              <input autocomplete="off" type="text" name="username" class="form-control mb-2 mr-sm-2" placeholder="Username">
              <input autocomplete="off" type="password" name="password" class="form-control mb-2 mr-sm-2" placeholder="Password">
              <div class="d-flex justify-content-center">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <button type="submit" id="login-button" class="btn btn-success mt-2 mb-3">Log in</button>
              </div>
            </form>
          </div>
        </div>
        <hr>
        <!-- REGISTER FORM -->
      <div id="registerForm" class="jumbotron-transparent px-5 my-5"><h1 class="orange-text text-center recursive display-4"><i>otherwise</i> Hanford needs...</h1>
        <form id="registration-form" class="my-5" action="/register" method="POST">
            <% regErrors.forEach(function(message) { %>
              <div class="alert alert-danger small py-1"><%= message %></div>
            <% }) %>
            <h2 class="text-center mt-4 mb-3">Student Details</h2>
            <div id="fNameDiv" class="input-group mb-3">
              <div id="fNamePrepend" class="input-group-prepend">
                <span id="fNameText" class="input-group-text">Student's First Name</span>
              </div>
              <input id="fNameInput" autocomplete="off" type="text" name="fName" class="form-control" value="" placeholder="Wolfgang Amadeus, Johann Sebastian, Claude, etc.">
            </div>
            <div id="lNameDiv" class="input-group mb-3">
              <div id="lNamePrepend" class="input-group-prepend">
                <span id="lNameText" class="input-group-text">Student's Last Name</span>
              </div>
              <input id="lNameInput" autocomplete="off" type="text" name="lName" class="form-control" value="" placeholder="Mozart, Bach, Debussy, etc.">
            </div>
            <hr>
            <h2 class="text-center mt-4 mb-3">Parent Details</h2>
            <div id="parentNameDiv" class="input-group mb-3">
              <div id="parentNamePrepend" class="input-group-prepend">
                <span id="parentNameText" class="input-group-text">Parent's First Name</span>
              </div>
              <input id="parentNameInput" autocomplete="off" type="text" name="parentName" class="form-control" value="" placeholder="Leopold, Johann Ambrosias, Manuel-Achille, etc.">
            </div>
            <div id="emailDiv" class="input-group mb-3">
              <div id="emailPrepend" class="input-group-prepend">
                <span id="emailText" class="input-group-text">Email</span>
              </div>
              <input id="emailInput" autocomplete="off" type="email" name="email" class="form-control" value="" placeholder="louis-vierne@notre-dame.com, etc.">
            </div>
            <div id="mobileDiv" class="input-group mb-3">
              <div id="mobilePrepend" class="input-group-prepend">
                <span id="mobileText" class="input-group-text">Mobile</span>
              </div>
              <input id="mobileInput" autocomplete="off" type="tel" name="mobile" class="form-control" value="" placeholder="04xxxxxxxx, etc.">
            </div>
            <hr>
            <h2 class="text-center mt-4 mb-3">Login Details</h2>
            <div id="usernameDiv" class="input-group mb-3">
              <div id="usernamePrepend" class="input-group-prepend">
                <span id="usernameText" class="input-group-text">Username</span>
              </div>
              <input id="usernameInput" autocomplete="off" type="text" name="username" class="form-control" value="" placeholder="m1r1amHyd3, p3t3rSculth0rp3, etc.">
            </div>
            <div id="passwordDiv" class="input-group mb-3">
              <div id="passwordPrepend" class="input-group-prepend">
                <span id="passwordText" class="input-group-text">Password</span>
              </div>
              <input id="passwordInput" autocomplete="off" type="password" name="password" class="form-control" value="" placeholder="Choose something between 8 and 50 characters long!">
            </div>
            <hr>
            <h2 class="text-center mt-4 mb-3">Finally</h2>
            <div id="secretDiv" class="input-group mb-3">
              <div id="secretPrepend" class="input-group-prepend">
                <span id="secretText" class="input-group-text">Secret Code</span>
              </div>
              <input id="secretInput" autocomplete="off" type="text" name="secret" class="form-control" value="" placeholder="What was it that Hanford said...?">
            </div>
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <button type="submit" class="btn btn-success btn-lg btn-block mt-5">Register!</button>
          </form>
        </div>
<%- include('includes/footer') %>